<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadingEdge="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/teks_hasil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_margin="10dp"/>


        </LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/tombol_mintadata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ambil Volley String"/>


    <Button
        android:id="@+id/tombol_mintadatagson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ambil Volley GSON"/>



    <Button
        android:id="@+id/tombol_mintadatajakson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ambil Volley Jackson"/>


    <Button
        android:id="@+id/tombol_mintadatamultiparts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ambil Volley Multiparts"/>


</LinearLayout>